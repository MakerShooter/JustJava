<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/typical_dp"
    android:orientation="vertical"

    tools:context="com.example.user.justjava.MainActivity">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter your name"
    android:id="@+id/edit_name"
    />

    <TextView
        android:text="@string/toppings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textToppings"
        android:layout_marginTop="@dimen/typical_dp"
        android:layout_marginBottom="@dimen/typical_dp"
        android:textAllCaps="true"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whippedcream"
        android:id="@+id/checkbox_whipped"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chocolate"
        android:id="@+id/checkbox_chocolate"/>
    <TextView
        android:text="@string/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/typical_dp"
        android:layout_marginBottom="@dimen/typical_dp"
        android:textAllCaps="true"

        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:text="-"
        android:layout_width="@dimen/button_dimension"
        android:layout_height="@dimen/button_dimension"
        android:id="@+id/minus"
        android:onClick="decrement"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity_text_view"
        android:layout_marginTop="@dimen/typical_dp"
        android:layout_marginBottom="@dimen/typical_dp"
        android:layout_marginLeft="@dimen/typical_dp"
        android:layout_marginRight="@dimen/typical_dp"
        android:textColor="#000000"
        android:textSize="16sp"
        />



    <Button
        android:text="+"
        android:layout_width="@dimen/button_dimension"
        android:layout_height="@dimen/button_dimension"
        android:id="@+id/plus"
        android:onClick="increment"/>

</LinearLayout>

    <TextView
        android:text="@string/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_price"
        android:layout_marginTop="@dimen/typical_dp"
        android:layout_marginBottom="@dimen/typical_dp"
        android:textAllCaps="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/priceValue"
        android:id="@+id/price_text_view"
        android:layout_marginTop="@dimen/typical_dp"
        android:layout_marginBottom="@dimen/typical_dp"
        android:textColor="#000000"
        android:textSize="16sp"
        />


    <Button
        android:text="@string/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/button"
        android:onClick="submitOrder"
        />
</LinearLayout>
